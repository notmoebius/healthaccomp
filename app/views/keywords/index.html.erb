<p id="notice"><%= notice %></p>

<h1>Gérer les mots clés</h1>
<%= link_to 'Ajouter un mot-clé', new_keyword_path, type:"button", class:"btn btn-outline-success"  %>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Libellé</th>
      <th>Rattaché au signalement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.label %></td>
        <td><%= keyword.report.label %></td>
        <td><%= link_to 'voir', keyword %></td>
        <td><%= link_to 'Editer', edit_keyword_path(keyword) %></td>
        <td><%= link_to 'Supprimer', keyword, method: :delete, data: { confirm: 'Etes-vous sûr ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


